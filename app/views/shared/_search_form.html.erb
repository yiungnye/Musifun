<div class="container">
  <%= form_with url: instruments_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an instrument"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
