<%= render 'shared/navbar' %>
<div class="post">
  <div class="container">
    <br><br>
    <h1 class='text-center mb-4'>My Posts</h1>
    <div class="cards-container">
    <% @posts.each do |post| %>

    <div class="product-card" style="height: 310px;">
    <% if post.photo.attached? %>
      <div class="img-bg" style="background-image:url('<%= cl_image_path post.photo.key, height: 300, crop: :fill %>')";></div>
    <% else %>
      <div class="img-bg-none"><p>No Image</p></div>
    <% end %>
      <div class="product-content">
        <p><%= post.name %></p>
        <p><strong>Posted on:</strong> <%= post.created_at %></p>
        <p><strong>Price:</strong> Rs<%= post.price %> / Day</p>
      </div>
    </div>

    <% end %>
    </div>
  </div>
</div>
